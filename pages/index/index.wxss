.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 10rpx solid #FFF;
  box-shadow: 0 0 0 0.5px rgba(100, 100, 100, 0.842);
  -webkit-box-shadow: 0 0 0 0.5px rgba(100, 100, 100, 0.822);
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.driverImg {
  border-radius: 4rpx;
  border: 2rpx solid rgba(217, 240, 245, 0.89);
}